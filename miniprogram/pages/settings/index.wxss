page {
  background: #0f172a;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  color: #e2e8f0;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #f8fafc;
  margin-bottom: 12rpx;
}

.item {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.name {
  font-size: 30rpx;
  color: #e2e8f0;
}

.sub {
  font-size: 24rpx;
  color: #94a3b8;
}

.picker-value {
  color: #e2e8f0;
  font-size: 28rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 8rpx;
}

.rules-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-section {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 12rpx;
  overflow: hidden;
}

.rule-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  cursor: pointer;
  transition: background-color 0.2s;
}

.rule-header:active {
  background-color: rgba(255, 255, 255, 0.05);
}

.rule-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #e2e8f0;
}

.rule-icon {
  font-size: 24rpx;
  color: #94a3b8;
  transition: transform 0.3s;
  transform: rotate(-90deg);
}

.rule-icon.expanded {
  transform: rotate(0deg);
}

.rule-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-out;
}

.rule-content.expanded {
  max-height: 2000rpx;
  transition: max-height 0.3s ease-in;
}

.rule-text {
  display: flex;
  padding: 12rpx 20rpx;
  padding-left: 20rpx;
  color: #cbd5e1;
  font-size: 28rpx;
  line-height: 1.6;
}

.rule-bullet {
  color: #60a5fa;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.rule-item {
  flex: 1;
}
