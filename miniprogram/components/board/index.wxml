<view class="board" style="width: {{size}}px; height: {{size}}px;">
  <block wx:for="{{gridCount}}" wx:for-item="row" wx:for-index="rowIndex" wx:key="row">
    <block wx:for="{{gridCount}}" wx:for-item="col" wx:for-index="colIndex" wx:key="col">
      <view
        class="cell"
        data-x="{{rowIndex}}"
        data-y="{{colIndex}}"
        bindtap="onTap"
      >
        <!-- 棋子 -->
        <block wx:if="{{board[rowIndex] && board[rowIndex][colIndex] !== 0}}">
          <view
            class="stone {{board[rowIndex][colIndex] === 1 ? 'black' : 'white'}} {{lastMoveMark[rowIndex + '_' + colIndex] ? 'last' : ''}} {{winningMarks[rowIndex + '_' + colIndex] ? 'winning' : ''}}"
          />
        </block>
      </view>
    </block>
  </block>

  <!-- 星位 -->
  <block wx:for="{{starPoints}}" wx:key="star">
    <view class="star" style="left: {{item.x}}px; top: {{item.y}}px;"></view>
  </block>
</view>

