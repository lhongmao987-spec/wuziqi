{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["ES2017", "DOM"],
    "types": ["miniprogram-api-typings"],
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "miniprogram/**/*.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cloudfunctions"
  ]
}

