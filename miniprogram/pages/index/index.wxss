page {
  background: #0f172a;
  color: #e2e8f0;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero {
  background: linear-gradient(120deg, #1f2937, #0f172a);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.35);
}

.badge {
  display: inline-block;
  background: rgba(7, 193, 96, 0.15);
  color: #34d399;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #f8fafc;
  margin-bottom: 8rpx;
}

.subtitle {
  color: #cbd5e1;
  font-size: 28rpx;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  color: #f1f5f9;
  font-size: 36rpx;
  font-weight: 600;
}

.card-desc {
  color: #94a3b8;
  font-size: 28rpx;
}

.mode-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.mode-tile {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.mode-tile.active {
  border-color: #34d399;
  box-shadow: 0 8rpx 20rpx rgba(52, 211, 153, 0.15);
}

.mode-title {
  color: #e2e8f0;
  font-size: 32rpx;
  font-weight: 600;
}

.mode-tip {
  color: #94a3b8;
  font-size: 26rpx;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.06);
  color: #cbd5e1;
  font-size: 24rpx;
  border: 1px solid transparent;
}

.chip-active {
  border-color: #34d399;
  color: #f8fafc;
  background: rgba(52, 211, 153, 0.15);
}

.chip-line {
  border-color: rgba(255, 255, 255, 0.12);
  color: #e2e8f0;
}

.controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.primary {
  flex: 1;
  background: linear-gradient(135deg, #34d399, #10b981);
  color: #0f172a;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  padding: 22rpx;
  border-radius: 14rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.info-card {
  background: #111827;
  border: 1px solid #1f2937;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: 140rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.24);
}

.info-title {
  color: #e2e8f0;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-desc {
  color: #94a3b8;
  font-size: 26rpx;
}
