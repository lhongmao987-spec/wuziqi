page {
  background: #0f172a;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  color: #e2e8f0;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #f8fafc;
}

.subtitle {
  margin-top: 8rpx;
  color: #94a3b8;
  font-size: 26rpx;
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.index {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  background: rgba(52, 211, 153, 0.18);
  color: #34d399;
  font-weight: 700;
  text-align: center;
  line-height: 40rpx;
}

.name {
  font-size: 30rpx;
  color: #e2e8f0;
}

.right {
  text-align: right;
}

.stat {
  font-size: 28rpx;
  color: #f8fafc;
  font-weight: 700;
}

.streak {
  font-size: 24rpx;
  color: #94a3b8;
}
