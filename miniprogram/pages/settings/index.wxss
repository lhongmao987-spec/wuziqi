page {
  background: #0f172a;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  color: #e2e8f0;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #f8fafc;
  margin-bottom: 12rpx;
}

.item {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.left {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.name {
  font-size: 30rpx;
  color: #e2e8f0;
}

.sub {
  font-size: 24rpx;
  color: #94a3b8;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.rule {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 12rpx;
  padding: 14rpx;
  color: #cbd5e1;
}
