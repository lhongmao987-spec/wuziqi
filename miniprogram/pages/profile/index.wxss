page {
  background: #0f172a;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  color: #e2e8f0;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
}

.user-info {
  padding: 40rpx 28rpx;
}

.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #34d399;
  background: #1f2937;
}

.avatar-btn {
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.avatar-btn::after {
  border: none;
}

.avatar-btn .avatar {
  width: 100%;
  height: 100%;
  border: 4rpx solid #34d399;
}

.nickname-input {
  width: 300rpx;
  padding: 16rpx 24rpx;
  background: #1f2937;
  border: 2rpx solid #34d399;
  border-radius: 50rpx;
  color: #f8fafc;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.save-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(59, 130, 246, 0.3);
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  opacity: 0.8;
}

.user-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #f8fafc;
}


.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #f8fafc;
}

.grid {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.stat {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
}

.label {
  color: #94a3b8;
  font-size: 24rpx;
}

.value {
  margin-top: 6rpx;
  font-size: 32rpx;
  color: #f8fafc;
  font-weight: 700;
}

.list {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name {
  font-size: 30rpx;
  color: #e2e8f0;
}

.sub {
  font-size: 24rpx;
  color: #94a3b8;
}

.result {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 700;
}

.result.win {
  background: rgba(52, 211, 153, 0.18);
  color: #34d399;
}

.result.lose {
  background: rgba(239, 68, 68, 0.15);
  color: #fca5a5;
}
