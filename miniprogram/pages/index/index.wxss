page {
  background: #0f172a;
  color: #e2e8f0;
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero {
  background: linear-gradient(120deg, #1f2937, #0f172a);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.35);
}

.badge {
  display: inline-block;
  background: rgba(7, 193, 96, 0.15);
  color: #34d399;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #f8fafc;
  margin-bottom: 8rpx;
}

.subtitle {
  color: #cbd5e1;
  font-size: 28rpx;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  color: #f1f5f9;
  font-size: 36rpx;
  font-weight: 600;
}

.card-desc {
  color: #94a3b8;
  font-size: 28rpx;
}

.mode-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.mode-tile {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.mode-tile.active {
  border-color: #34d399;
  box-shadow: 0 8rpx 20rpx rgba(52, 211, 153, 0.15);
}

.mode-title {
  color: #e2e8f0;
  font-size: 32rpx;
  font-weight: 600;
}

.mode-tip {
  color: #94a3b8;
  font-size: 26rpx;
}

.chips {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.06);
  color: #cbd5e1;
  font-size: 24rpx;
  border: 1px solid transparent;
}

.chip-active {
  border-color: #34d399;
  color: #f8fafc;
  background: rgba(52, 211, 153, 0.15);
}

.chip-line {
  border-color: rgba(255, 255, 255, 0.12);
  color: #e2e8f0;
}

.controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.primary {
  flex: 1;
  background: linear-gradient(135deg, #34d399, #10b981);
  color: #0f172a;
  font-size: 32rpx;
  font-weight: 700;
  border: none;
  padding: 22rpx;
  border-radius: 14rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.info-card {
  background: #111827;
  border: 1px solid #1f2937;
  border-radius: 16rpx;
  padding: 20rpx;
  min-height: 140rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.24);
}

.info-title {
  color: #e2e8f0;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.info-desc {
  color: #94a3b8;
  font-size: 26rpx;
}

.invite-card {
  margin-top: 24rpx;
}

.invite-btn {
  flex: 1;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  padding: 22rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.invite-icon {
  font-size: 36rpx;
}

.invite-btn.secondary {
  background: transparent;
  border: 1px solid #3b82f6;
  color: #3b82f6;
}

.invite-btn.secondary:active {
  background: rgba(59, 130, 246, 0.1);
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  /* 过渡动画 */
  transition: padding-bottom 0.3s ease-out, padding-top 0.3s ease-out;
}

/* 无键盘时：垂直居中 */
.modal-overlay.center {
  align-items: center;
}

/* 有键盘时：贴底（键盘避让） */
.modal-overlay.bottom {
  align-items: flex-end;
  /* padding-bottom 值通过内联样式动态设置：keyboardHeight + safeAreaBottom + gap */
}

/* 有键盘时：贴顶（上边界夹紧，避免被顶出屏幕） */
.modal-overlay.top {
  align-items: flex-start;
  padding-top: 24px;
  /* 固定顶部，避免弹窗被顶出屏幕导致输入框/数字被裁切 */
}

.modal-content {
  background: #111827;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90%;
  overflow: hidden;
  box-sizing: border-box;
  /* 禁止使用 transform，使用 flex 布局定位 */
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1px solid #1f2937;
}

.modal-title {
  color: #f1f5f9;
  font-size: 36rpx;
  font-weight: 600;
}

.modal-close {
  color: #94a3b8;
  font-size: 48rpx;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 32rpx;
  box-sizing: border-box;
}

.room-input {
  width: 100%;
  box-sizing: border-box;
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 12rpx;
  /* 明确的尺寸设置，避免真机键盘弹出时文字被裁切 */
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  color: #f1f5f9;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 8rpx;
  font-family: 'Courier New', monospace;
  /* line-height 与 height 相等，确保文字垂直居中 */
}

.room-input::placeholder {
  color: #64748b;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx;
  border-top: 1px solid #1f2937;
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.modal-btn.cancel {
  background: transparent;
  color: #94a3b8;
  border: 1px solid #1f2937;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
}