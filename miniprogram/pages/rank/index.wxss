page {
  background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
  min-height: 100vh;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  color: #e2e8f0;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #f8fafc;
  margin-bottom: 8rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #94a3b8;
  font-size: 28rpx;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  color: #94a3b8;
  font-size: 28rpx;
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  transition: all 0.3s ease;
}

/* 前三名高亮 */
.item.top-three {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.08) 0%, rgba(255, 215, 0, 0.03) 100%);
  border-color: rgba(255, 215, 0, 0.2);
}

.item.top-three.rank-1 {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.12) 0%, rgba(255, 215, 0, 0.05) 100%);
}

.item.top-three.rank-2 {
  background: linear-gradient(135deg, rgba(192, 192, 192, 0.12) 0%, rgba(192, 192, 192, 0.05) 100%);
}

.item.top-three.rank-3 {
  background: linear-gradient(135deg, rgba(205, 127, 50, 0.12) 0%, rgba(205, 127, 50, 0.05) 100%);
}

/* 当前用户高亮 */
.item.current-user {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(59, 130, 246, 0.08) 100%);
  border: 2px solid rgba(59, 130, 246, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.2);
}

/* 排名区 */
.rank-area {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.medal {
  font-size: 48rpx;
  line-height: 1;
}

.rank-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: rgba(52, 211, 153, 0.18);
  color: #34d399;
  font-weight: 700;
  font-size: 26rpx;
  text-align: center;
  line-height: 48rpx;
}

/* 用户区 */
.user-area {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
  background: #1f2937;
}

.user-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.name {
  font-size: 30rpx;
  color: #e2e8f0;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sub-info {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 数据区 */
.data-area {
  text-align: right;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.record {
  font-size: 28rpx;
  color: #f8fafc;
  font-weight: 600;
}

.streak {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 底部排名提示 */
.rank-footer {
  margin-top: 32rpx;
  padding: 24rpx;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 12rpx;
  border: 1px solid rgba(59, 130, 246, 0.2);
  text-align: center;
}

.rank-footer-text {
  color: #60a5fa;
  font-size: 28rpx;
  font-weight: 500;
}
