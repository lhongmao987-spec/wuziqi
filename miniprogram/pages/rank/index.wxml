<view class="page">
  <view class="card">
    <view class="title">排行榜</view>
    <view wx:if="{{loading}}" class="loading">加载中...</view>
    <view wx:else>
      <view wx:if="{{ranks.length === 0}}" class="empty">暂无排行榜数据</view>
      <view wx:else class="list">
        <block wx:for="{{ranks}}" wx:key="rank">
          <view class="item">
            <view class="left">
              <view class="index">{{item.rank}}</view>
              <view class="name">{{item.name || '未命名'}}</view>
            </view>
            <view class="right">
              <view class="stat">{{item.wins}} 胜</view>
              <view class="streak">连胜 {{item.streak}}</view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>
