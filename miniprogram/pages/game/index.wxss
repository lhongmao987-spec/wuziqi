.page {
  background: #0F172A;
  color: #fff;
  min-height: 100vh;
  padding: 16px;
  box-sizing: border-box;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.btn-icon {
  padding: 8px 12px !important;
  background: #1F2933 !important;
  border-radius: 12px !important;
  border: none !important;
  color: #fff !important;
  font-size: 14px !important;
  min-width: 60px !important;
  text-align: center !important;
  line-height: 1.5 !important;
  margin: 0 !important;
  position: relative !important;
  z-index: 999 !important;
}

.btn-icon-hover {
  background: #2D3748 !important;
}

.game-mode {
  font-size: 16px;
  font-weight: 500;
}

.timer {
  color: #07C160;
  font-weight: 500;
}

.player-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #1F2933;
  border-radius: 12px;
  padding: 12px 16px;
  margin-bottom: 16px;
}

.player {
  display: flex;
  align-items: center;
  gap: 8px;
}

.player-meta {
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 14px;
  font-weight: 500;
}

.player-role {
  font-size: 12px;
  color: #94A3B8;
}

.current-turn {
  background: #07C160;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.board-container {
  display: flex;
  justify-content: center;
  margin: 12px 0;
}

.bottom-actions {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}

.action-btn {
  flex: 1;
  padding: 12px;
  border-radius: 12px;
  border: none;
  font-size: 14px;
  font-weight: 500;
}

.btn-undo {
  background: #1F2933;
  color: #fff;
}

.btn-resign {
  background: #EF4444;
  color: #fff;
}

.roll-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 24px;
  box-sizing: border-box;
}

.roll-panel {
  background: #1F2933;
  border-radius: 16px;
  padding: 20px;
  width: 100%;
  max-width: 360px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.roll-title {
  font-size: 18px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 8px;
}

.roll-desc {
  text-align: center;
  color: #94A3B8;
  font-size: 14px;
  margin-bottom: 16px;
}

.roll-dice-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 16px;
}

.dice-box {
  background: #111827;
  border: 1px solid #2D3748;
  border-radius: 12px;
  padding: 12px;
  width: 120px;
  text-align: center;
}

.dice-label {
  color: #94A3B8;
  font-size: 12px;
  margin-bottom: 8px;
}

.dice-value {
  font-size: 32px;
  font-weight: 700;
}

.dice-anim {
  animation: spin 0.6s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.action-btn.primary {
  background: #07C160;
  color: #fff;
}

