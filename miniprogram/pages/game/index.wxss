.page {
  background: #0F172A;
  color: #fff;
  min-height: 100vh;
  padding: 16px;
  box-sizing: border-box;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.btn-icon {
  padding: 8px 12px !important;
  background: #1F2933 !important;
  border-radius: 12px !important;
  border: none !important;
  color: #fff !important;
  font-size: 14px !important;
  min-width: 60px !important;
  text-align: center !important;
  line-height: 1.5 !important;
  margin: 0 !important;
  position: relative !important;
  z-index: 999 !important;
}

.btn-icon-hover {
  background: #2D3748 !important;
}

.game-mode {
  font-size: 16px;
  font-weight: 500;
}

.timer {
  color: #07C160;
  font-weight: 500;
}

.player-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #1F2933;
  border-radius: 12px;
  padding: 12px 16px;
  margin-bottom: 16px;
}

.player {
  display: flex;
  align-items: center;
  gap: 8px;
}

.player-meta {
  display: flex;
  flex-direction: column;
}

.player-name {
  font-size: 14px;
  font-weight: 500;
}

.player-role {
  font-size: 12px;
  color: #94A3B8;
}

.current-turn {
  background: #07C160;
  color: #fff;
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 12px;
  font-weight: 500;
}

.board-container {
  display: flex;
  justify-content: center;
  margin: 12px 0;
}

.bottom-actions {
  display: flex;
  gap: 12px;
  margin-top: 16px;
}

.action-btn {
  flex: 1;
  padding: 12px;
  border-radius: 12px;
  border: none;
  font-size: 14px;
  font-weight: 500;
}

.btn-undo {
  background: #1F2933;
  color: #fff;
}

.btn-resign {
  background: #EF4444;
  color: #fff;
}

