page {
  background: #0f172a;
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  color: #e2e8f0;
}

.page {
  display: flex;
  justify-content: center;
}

.card {
  background: #111827;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.32);
  width: 100%;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #f8fafc;
}

.subtitle {
  margin-top: 12rpx;
  color: #94a3b8;
  font-size: 28rpx;
}

.stats {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.stat {
  background: #0b1220;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 16rpx;
}

.stat-label {
  color: #94a3b8;
  font-size: 24rpx;
}

.stat-value {
  margin-top: 6rpx;
  color: #f8fafc;
  font-size: 32rpx;
  font-weight: 700;
}

.chips {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.chip {
  padding: 8rpx 16rpx;
  background: rgba(52, 211, 153, 0.12);
  color: #34d399;
  border: 1px solid rgba(52, 211, 153, 0.4);
  border-radius: 999rpx;
  font-size: 24rpx;
}

.actions {
  margin-top: 32rpx;
  display: flex;
  gap: 16rpx;
}

.primary {
  flex: 1;
  background: linear-gradient(135deg, #34d399, #10b981);
  color: #0f172a;
  border: none;
  border-radius: 14rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 700;
}

.ghost {
  flex: 1;
  background: rgba(255, 255, 255, 0.06);
  color: #e2e8f0;
  border: 1px solid #1f2937;
  border-radius: 14rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 600;
}
